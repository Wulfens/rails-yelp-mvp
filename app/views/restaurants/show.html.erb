<div class="navbar">
    <%= link_to "Restaurants", restaurants_path %>
    <%= link_to "Add Review", new_restaurant_path %>
</div>

<div class="container">
    <h1>
        <%= @restaurant.name %>
    </h1>
    <p><%= @restaurant.category %></p>
    <p><%= @restaurant.address %></p>
    <p><%= @restaurant.phone_number %></p>
    <div>
    <div class="comment">
    <h3>reviews</h3>

        <% @restaurant.reviews.each do |review| %>
                <p><%= review.content %></p>
                <p><%= review.rating %></p>
            <% end %>
        </div>
        

        <div class="leave-comment">
            
            <%= render '/reviews/new', restaurant: @restaurant, review: @reviews %>
        </div>
    </div>
    
</div>